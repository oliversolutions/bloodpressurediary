<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start"
        app:duration="1000">
    </Transition>


    <ConstraintSet android:id="@+id/start">


        <Constraint

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reminders_title"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintStart_toEndOf="@+id/reminders_image"
            android:layout_marginTop="32dp"

            />

        <Constraint

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reminders_description"
            app:layout_constraintTop_toBottomOf="@+id/reminders_title"
            app:layout_constraintStart_toEndOf="@+id/reminders_image"

            />

        <Constraint

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_title"
            app:layout_constraintTop_toBottomOf="@+id/reminders_description"
            app:layout_constraintStart_toEndOf="@+id/info_image"
            android:layout_marginTop="32dp" />

        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_description"
            app:layout_constraintTop_toBottomOf="@+id/info_title"
            app:layout_constraintStart_toEndOf="@+id/info_image"
            />



    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reminders_title"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintStart_toEndOf="@+id/reminders_image"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"

            />

        <Constraint

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reminders_description"
            app:layout_constraintTop_toBottomOf="@+id/reminders_title"
            app:layout_constraintStart_toEndOf="@+id/reminders_image"
            android:layout_marginStart="24dp"

            />

        <Constraint

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_title"
            app:layout_constraintTop_toBottomOf="@+id/reminders_description"
            app:layout_constraintStart_toEndOf="@+id/info_image"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"

            />

        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_description"
            app:layout_constraintTop_toBottomOf="@+id/info_title"
            app:layout_constraintStart_toEndOf="@+id/info_image"
            android:layout_marginStart="24dp"
            />



    </ConstraintSet>


</MotionScene>
